.nav_box{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}
.nav_box .temp_box:nth-child(1){
  border-top: 2rpx solid rgba(5,5,5,0.2);
}
.temp_box{
  background: #fff;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0rpx 30rpx;
  border-bottom: 2rpx solid rgba(5,5,5,0.2);
}
.temp_left{
  font-size: 32rpx;
  width: 200rpx;
}
.temp_right{
  flex: 1;
}
.picker{
  display: flex;
  align-items: center;
  height: 100rpx;
}
.txt{
  flex: 1;
}
.img{
  width: 20rpx;
  height: 20rpx;
}
.input{
  width: 100%;
  height: 100rpx;
}
.btn{
  position: fixed;
  z-index: 1111;
  width: 100%;
  left: 0rpx;
  color: #fff;
  padding: 0rpx;
  margin: 0rpx;
  background: #F03D37;
  border-radius: 0rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.btn::after{
  border: none;
}
.place_view{
  width: 100%;
  height: 100rpx;
}